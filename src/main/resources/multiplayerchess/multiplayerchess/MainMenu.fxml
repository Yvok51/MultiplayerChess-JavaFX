<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17"
            fx:controller="multiplayerchess.multiplayerchess.client.ui.MainMenuController">
    <children>
        <Button layoutX="200.0" layoutY="350.0" mnemonicParsing="false" onAction="#onJoinGame" prefHeight="100.0"
                prefWidth="400.0" text="Join Game">
            <font>
                <Font name="System Bold" size="42.0"/>
            </font>
        </Button>
        <Button layoutX="200.0" layoutY="200.0" mnemonicParsing="false" onAction="#onStartGame" prefHeight="100.0"
                prefWidth="400.0" text="Start Game">
            <font>
                <Font name="System Bold" size="42.0"/>
            </font>
        </Button>
        <Button layoutX="200.0" layoutY="500.0" mnemonicParsing="false" onAction="#onQuit" prefHeight="100.0"
                prefWidth="400.0" text="Quit">
            <font>
                <Font name="System Bold" size="42.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
